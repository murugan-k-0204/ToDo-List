<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/purple_200"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/topBar"
        android:layout_marginTop="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="12dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dhanush"
                android:contentDescription="Profile"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"

            android:src="@drawable/ic_baseline_calendar_today_24"
            android:contentDescription="profile"
            tools:ignore="HardcodedText" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        android:id="@+id/time"
        tools:ignore="HardcodedText">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="75sp"
            android:layout_marginEnd="20dp"
            android:text="23"
            android:id="@+id/date"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/month"
            android:layout_toEndOf="@id/date"
            android:text="Friday"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/date"
            android:layout_toEndOf="@id/date"
            android:text="Aug"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:text="While there is life, there is hope"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:scrollbars="horizontal"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="20dp"
        android:scrollbarSize="0dp"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/time">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_edges"
            android:padding="10dp"
            android:orientation="horizontal"
            tools:ignore="ScrollViewSize">

            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:elevation="12dp"
                app:cardBackgroundColor="#0B7EDA"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="25dp"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"

                    android:src="@drawable/icon_code"
                    android:contentDescription="Profile"
                    tools:ignore="HardcodedText" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:elevation="12dp"
                app:cardBackgroundColor="#E91E63"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="25dp"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"

                    android:src="@drawable/icon_book"
                    android:contentDescription="Profile"
                    tools:ignore="HardcodedText" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:elevation="12dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="25dp"
                app:cardBackgroundColor="#FF9800"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"

                    android:src="@drawable/icon_app"
                    android:contentDescription="Profile"
                    tools:ignore="HardcodedText" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:elevation="12dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="25dp"
                app:cardBackgroundColor="#40F321"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"

                    android:src="@drawable/icon_exercise"
                    android:contentDescription="Profile"
                    tools:ignore="HardcodedText" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:elevation="12dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="25dp"
                app:cardBackgroundColor="#F34B21"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"

                    android:src="@drawable/icon_music"
                    android:contentDescription="Profile"
                    tools:ignore="HardcodedText" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:elevation="12dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="25dp"
                app:cardBackgroundColor="#3F51B5"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"

                    android:src="@drawable/icon_food"
                    android:contentDescription="Profile"
                    tools:ignore="HardcodedText" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
